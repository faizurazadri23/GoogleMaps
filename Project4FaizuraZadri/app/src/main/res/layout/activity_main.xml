<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtTitle"
        android:text="List Programming"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnListSatu"
        android:layout_below="@+id/txtTitle"
        android:layout_width="150dp"
        android:text="@string/list_satu"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/stylebutton"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnListDua"
        android:layout_toRightOf="@+id/btnListSatu"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/list_dua"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/stylebutton"
        android:layout_below="@+id/txtTitle"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnEXit"
        android:text="@string/exit"
        android:layout_below="@+id/btnListSatu"
        android:layout_marginTop="30dp"
        android:background="@drawable/stylebutton"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>